<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css" />;

  </head>
<body>

    <div class="box" id='heading'>
      <h1><%=listTitle%></h1>
    </div>

  <div class="box">

  <% newListItems.forEach (function(item){  %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name = "checkboxie[]" value="<%=item._id%>" onChange="this.form.submit()"> <!-- On change  from stackoverflow, id from mongoose auto generated will be grabbed-->
          <li><%=item.name%></li>   <!--from mongoose item name grabbed-->
        </div>
     </form>
  <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" >
        <button type="submit" name="list" value" <%=listTitle%>">+</button>
      </form>
  </div>

  </body>

  <footer>
     By Nino Mitchell
  </footer>

</html>
